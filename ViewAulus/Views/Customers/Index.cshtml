@model IEnumerable<PlasticManufacturer.Domain.Entities.Customers.Customer>

@{
    ViewBag.Title = "List of Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel spacer-20">
    <div class="panel-heading no-padding">
        <a href="#" class="panel-expander notext fr">&nbsp;</a>
        <h2 class="clipboard">Customer</h2>
    </div>
    <div class="panel-container">
        <div class="options">
            <ul>
                <li>@Html.ActionLink("New", "Create", "", new { @class = "new" })</li>
            </ul>
        </div>
        <table class="table gn-table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Notes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>

                <th colspan="2"></th>   
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    

                    <td>
                        @Html.DisplayFor(modelItem => item.Notes)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>


                    <td align="center">
                        <div class="btn btn-default">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        </div>
                    </td>
                    <td align="left">
                       
                        <form action="/Customers/Delete/@item.Id " method="post" onsubmit="return confirm('Do you really want delete the Customer : @item.Name ?');">
                            @Html.AntiForgeryToken()
                       
                            <a href="#" class="delete" onclick="this.parentNode.submit(); return confirm('Do you really want delete the Customer : @item.Name ?');"> Delete</a>

                        </form>
                           
                    </td>
                </tr>
            }
            <tr>
                <td colspan="4" align="left"></td>
            </tr>

        </table>
    </div>
    </div>
  