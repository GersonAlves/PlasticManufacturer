                                <li><a href="#" class="new">New</a></li>
                                <li><a href="#" class="delete">Delete</a></li>
                                <li><a href="#" class="search">Search</a></li>
                                <li><a href="#" class="formula">Formula</a></li>
                                <li><a href="#" class="label">Label</a></li>
                                <li><a href="#" class="send">Send</a></li>
                                <li><a href="#" class="exit">Exit</a></li>
                                

