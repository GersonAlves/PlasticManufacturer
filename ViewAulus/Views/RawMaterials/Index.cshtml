@model IEnumerable<PlasticManufacturer.Domain.Entities.RawMaterial.RawMaterial>

@{
    ViewBag.Title = "List of Raw Materials";

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div><h4>List of Raw Materials</h4></div>
    <table class="form-horizontal table2 gn-table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                Is Active?
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>

            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                <td align="right">
                    <div class="btn btn-default">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    </div>
                </td>
                <td align="left">
                    <form action="/RawMaterials/Delete/@item.Id " method="post" >
                        @Html.AntiForgeryToken()

                        <a href="#" class="delete" onclick="this.parentNode.submit(); return confirm('Do you really want delete the Raw Material: @item.Name ?');"> Delete</a>

                    </form>
                </td>

            </tr>
        }

    </table>

    <div class="form-group">
        <div class="btn btn-default">
            @Html.ActionLink("Create New", "Create")
        </div>
    </div>


</body>
</html>
