@model IEnumerable<PlasticManufacturer.Domain.Entities.RawMaterial.Category>

@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel spacer-20">
    <div class="panel-heading no-padding">
        <a href="#" class="panel-expander notext fr">&nbsp;</a>
        <h2 class="clipboard">Category</h2>
    </div>
    <div class="panel-container">
        <div class="options">
            <ul>
                <li><a class="new" href="/Categories/Create?Length=0">New</a></li>
            </ul>
        </div>
        <table class="table2 gn-table">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th colspan="2"></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td align="center">
                        <a href="~/Categories/">Edit</a>
                    </td>
                    <td align="left">
                        <form action="/Categories/Delete/@item.Id " method="post">
                            @Html.AntiForgeryToken()

                            <a href="#" class="delete" onclick="this.parentNode.submit(); return confirm('Do you really want delete the Category: @item.Name ?');"> Delete</a>

                        </form>
                    </td>
                </tr>
            }
            <tr>
                <td colspan="4" align="left"></td>
            </tr>
        </table>
    </div>
</div>