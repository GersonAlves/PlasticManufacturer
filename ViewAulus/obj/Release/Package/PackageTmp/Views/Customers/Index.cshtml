@model IEnumerable<PlasticManufacturer.Domain.Entities.Customers.Customer>

@{
    ViewBag.Title = "List of Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel spacer-20" ng-app="plasticManufacturer" ng-controller="CustomerController">
    <div class="panel-heading no-padding">
        <a href="#" class="panel-expander notext fr">&nbsp;</a>
        <h2 class="clipboard">Customer</h2>
    </div>
    <div class="panel-container">
        <div class="options">
            <ul>
                <li>@Html.ActionLink("New", "Create", "", new { @class = "new" })</li>
            </ul>
        </div>
        <table class="table gn-table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Notes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>

                <th colspan="2"> <input type="text"/></th>   
            </tr>


                <tr ng-repeat="customer in Customers">
                    <td>
                        {{customer.code}}
                    </td>

                    <td>
                        {{customer.name}}
                    </td>

                    <td>
                        {{customer.lastName}}
                    </td>
                    
                    <td>
                        {{customer.notes}}
                    </td>

                    <td>
                        {{customer.description}}
                    </td>


                    <td align="center">
                        <div class="btn btn-default">
                            <a href="/Customers/Edit/{{customer.id}}">Edit</a> 
                        </div>
                    </td>
                    @*<td align="left">
                       
                       <form action= {{customer.id}}   method="post">
                            @Html.AntiForgeryToken()
                       
                            <a href="#" class="delete" onclick="this.parentNode.submit(); return confirm('Do you really want delete the Customer ?');"> Delete</a>

                        </form>
                           
                    </td>*@
                </tr>




            <tr>
                <td colspan="4" align="left"></td>
            </tr>

        </table>
    </div>
    </div>
  