@model IEnumerable<PlasticManufacturer.Domain.Entities.Employees.Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel spacer-20">
    <div class="panel-heading no-padding">
        <a href="#" class="panel-expander notext fr">&nbsp;</a>
        <h2 class="clipboard">Employee</h2>
    </div>
    <div class="panel-container">
        <div class="options">
            <ul>
                <li>@Html.ActionLink("New", "Create", "", new { @class = "new" })</li>
            </ul>
        </div>

       <table class="table2 gn-table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Birthday)
                <th>
                    @Html.DisplayNameFor(model => model.MaritalStatus)
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.State)
                </th>
                  <th>
                    @Html.DisplayNameFor(model => model.ZipCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Department)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telephone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HireDate)
                </th>

                <th colspan="2"></th>
            </tr>
               

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>              
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Birthday)
                    </td>   
                    <td>
                        @Html.DisplayFor(modelItem => item.MaritalStatus)
                    </td>          
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>   
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>                 
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ZipCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Department)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telephone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HireDate)
                    </td>

                    <td align="right">
                        <a href="/Employees/Edit/@item.Id">Edit</a>
                    </td>
                    <td align="left">
                        <form action="/Employees/Delete/@item.Id " method="post">
                            @Html.AntiForgeryToken()

                            <a href="#" class="delete" onclick="this.parentNode.submit(); return confirm('Do you really want delete the Employee: @item.Name? ');"> Delete </a>

                        </form>
                    </td>
                </tr>
            }
            <tr>
                <td colspan="2" align="left"></td>
                <td colspan="2" align="left"></td>
            </tr>
        </table>
    </div>
</div>

