@model PlasticManufacturer.Domain.Entities.RawMaterial.RawMaterial

@{
    ViewBag.Title = "Edit Raw Materials";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="panel spacer-20">
    <div class="panel-heading no-padding">
        <a href="#" class="panel-expander notext fr">&nbsp;</a>
        <h2 class="clipboard">Edit Raw Material </h2>
    </div>

        <form action="/RawMaterials/Edit/@Model.Id" id="create" method="post">

            <div class="panel-container">
                <div class="options">
                    <ul>
                        <li>
                            <a class="post" href='javascript:create.submit()'>Post</a>
                        </li>

                        <li><a class="cancel" href="/RawMaterials?Length=0">Cancel</a></li>
                    </ul>
                </div>

                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    <input data-val="true" data-val-number="O campo Id deve ser um número." data-val-required="O campo Id é obrigatório." id="Id" name="Id" type="hidden" value="@Model.Id" />
                    <div class="fields-row">
                        <div class="fields-bar">
                            <div class="form-group">
                                <div class="col">
                                    <label class="control-label col-md-2" for="Code">Code</label>
                                    <input class="form-control text-box single-line" id="Code" name="Code   " type="text" value="@Model.Code" />
                                </div>
                                <div class="col">
                                    <label class="control-label col-md-2" for="Name">Name</label>
                                    <input class="form-control text-box single-line" id="Name" name="Name" type="text" value="@Model.Name" />
                                </div>
                                <div class="col">
                                    <label class="control-label col-md-2" for="Description">Description</label>
                                    <input class="form-control text-box single-line" id="Description" name="Description" type="text" value="@Model.Description" />
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="fields-row">
                        <div class="fields-bar">
                            <div class="form-group">
                                <div class="col">
                                    <label class="control-label col-md-2" for="Notes">Notes</label>
                                    <input class="form-control text-box single-line" id="Notes" name="Notes" type="text" value="@Model.Notes" />
                                </div>
                                <div class="col">
                                    <label class="control-label col-md-2" for="ChemicalName">Chemical Name</label>
                                    <input class="form-control text-box single-line" id="ChemicalName" name="ChemicalName" type="text" value="@Model.ChemicalName" />
                                </div>
                                <div class="col">
                                    <label class="control-label col-md-2" for="Status">Status</label>
                                    <select name="Status" id="Status" class="form-control" style="width:200px">
                                        <option value=""></option>
                                        <option value="true">Active</option>
                                        <option value="false">Inactive</option>

                                    </select>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="fields-row">
                        <div class="fields-bar">
                            <div class="form-group">
                                <div class="col">
                                    <label class="control-label col-md-2" for="MainSupplier">Main Supplier</label>
                                    <input class="form-control text-box single-line" id="MainSupplier" name="MainSupplier" type="text" value="@Model.MainSupplier" />
                                </div>
                                <div class="col">
                                    <label class="control-label col-md-2" for="MainCustomer">Main Customer</label>
                                    <input class="form-control text-box single-line" id="MainCustomer" name="MainCustomer" type="text" value="@Model.MainCustomer" />
                                </div>
                                <div class="col">
                                    <label class="control-label col-md-2" for="Category">Category</label>
                                    <select name="Category.Id" id="Category_Id" class="form-control" style="width: 200px">
                                        <option value=""></option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>



                    <div class="fields-row">
                        <div class="fields-bar">
                            <div class="form-group">
                                <div class="col">
                                    <label class="control-label col-md-2" for="HeatStability">Heat Stability</label>
                                    <input class="form-control text-box single-line" id="HeatStability" name="HeatStability" type="text" value="@Model.HeatStability" />
                                </div>
                                <div class="col">
                                    <label class="control-label col-md-2" for="LightSatability">Light Satability</label>
                                    <input class="form-control text-box single-line" id="LightSatability" name="LightSatability" type="text" value="@Model.LightSatability" />
                                </div>
                                <div class="col">
                                    <label class="control-label col-md-2" for="BarCode">BarCode</label>
                                    <input class="form-control text-box single-line" id="BarCode" name="BarCode" type="text" value="@Model.BarCode" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="fields-row">
                        <div class="fields-bar">
                            <div class="form-group">
                                <div class="col">
                                    <label class="control-label col-md-2" for="QCRequired">QCRequired</label>
                                    <div class="checkbox">
                                        <input class="check-box" data-val="true" data-val-required="O campo QCRequired é obrigatório." id="QCRequired" name="QCRequired" type="checkbox" value="true" /><input name="QCRequired" type="hidden" value="false" />
                                    </div>
                                </div>
                                <div class="col">
                                    <label class="control-label col-md-2" for="Fda">Fda</label>
                                    <div class="checkbox">
                                        <input class="check-box" data-val="true" data-val-required="O campo Fda é obrigatório." id="Fda" name="Fda" type="checkbox" value="true" /><input name="Fda" type="hidden" value="false" />
                                    </div>
                                </div>
                                <div class="col">
                                    <label class="control-label col-md-2" for="Hbfb">Hbfb</label>
                                    <div class="checkbox">
                                        <input class="check-box" data-val="true" data-val-required="O campo Hbfb é obrigatório." id="Hbfb" name="Hbfb" type="checkbox" value="true" /><input name="Hbfb" type="hidden" value="false" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
       </form>
</div>