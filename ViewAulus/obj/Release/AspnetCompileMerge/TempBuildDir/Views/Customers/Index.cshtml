@model IEnumerable<PlasticManufacturer.Domain.Entities.Common.Customer>

@{
    ViewBag.Title = "List of Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div><h4>List of Customers</h4></div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>            
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Notes)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>


        <td align="right">
            <div class="btn btn-default">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            </div>
        </td>
        <td align="left">
            <form action="/Customers/Delete/@item.Id " method="post" onsubmit="return confirm('Do you really want delete the Customer : @item.Name ?');">
                @Html.AntiForgeryToken()

                <a href="#" class="delete" onclick="this.parentNode.submit(); return confirm('Do you really want delete the Customer: @item.Name ?');"> Delete</a>

            </form>
        </td>
    </tr>
}

</table>
<div class="form-group">
    <div class="btn btn-default">
        @Html.ActionLink("Create New", "Create")
    </div>
</div>